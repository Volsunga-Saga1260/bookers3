<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <h3><%= link_to "Bookers", root_path, class:"fas fa-atlas" %></h3>
        </nav>
         <nav>
          <nav class="navbar navbar-expand-lg">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id) do %>
                  <i class="fas fa-home" aria-hidden="true"></i>
                  Home
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <i class="fas fa-users" aria-hidden="true"></i>
                  Users
                <% end %>
              </li>
              <li>
                <%= link_to books_path do %>
                  <i class="fas fa-book-open" aria-hidden="true"></i>
                  Books
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
                  logout
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path do %>
                  <i class="fas fa-home" aria-hidden="true"></i>
                  Home
                <% end %>
              </li>
              <li>
                <%= link_to about_path do %>
                  <i class="fas fa-link" aria-hidden="true"></i>
                  About
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                  <i class="fas fa-user-plus" aria-hidden="true"></i>
                  sign up
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <i class="fas fa-sign-in-alt" aria-hidden="true"></i>
                  login
                <% end %>
              </li>
            <% end %>
            </ul>
          </nav>
         </nav>
      </div>
    </header>
 <%= yield %>
    <footer>
      <p><smal>&copy; Infratop.inc</smal></p>
    </footer>

  </body>
</html>
